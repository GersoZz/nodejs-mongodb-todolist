<div class="card card-body p-4 rounded-0 bg-dark text-white">
  <h3>Añade una tarea</h3>
  <form action="/tasks/add" method="POST">
  <div>
    <label for="title">Escribe un Titulo</label>
    <input type="text" name="title" placeholder="Titulo..." id="title" class="form-control rounded-0 bg-dark text-white"/>
  </div>

  <div>
    <label for="description">Escribe una descripcion</label>
    <textarea class="form-control rounded-0 bg-dark text-white"
      name="description"
      placeholder="Descripcion..."
      id="description"
    ></textarea>
  </div>

  <button class="btn btn-primary btn-sm mt-2">Añadir</button>
</form>
</div>